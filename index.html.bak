---
title: Welcome to Ping Lab
---
{% include showcase.html %}
{% include greeting.html %}
<hr>

<style>
time {font-size:15px } 
</style>

{% if site.posts != empty %}
<div class="recent-posts">
  <h1> &#9827 Recent News</h1>
  {% for post in site.posts limit: 2 %}
    {% if forloop.first %}
      {% assign add_class = 'most-recent' %}
      {% capture fresh_tag %}
        &nbsp;<span class="badge"><smaller>fresh</smaller></span>
      {% endcapture %}
    {% endif %}
    <ul class="homepage-posts {{ add_class }}">
      <li>
        <span>
          <h4>
            <a href="{{ site.baseurl }}/http://fengyq.github.io/{{ post.url }}">
              {{ post.title }}
            </a>
            {{ fresh_tag }}
            <time class="pull-right">
              {{ post.date | date_to_string | date: "%b %-d, %Y"  }}
            </time>
          </h4>
        </span>
      </li>
    </ul>
    {% assign add_class = '' %}
    {% assign fresh_tag = '' %}
  {% endfor %}
  <ul>
    <a href="{{ site.baseurl }}/news.html">View More...</a>
  </ul>
</div>
{% endif %}